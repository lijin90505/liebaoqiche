<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="com.ibest.experience.dao.UserExperienceCountDao">

    <sql id="allColumns">
    	luec.id as id,
    	luec.access_system_id as accessSystemId,
    	luec.app_id as appId,
    	luec.user_id as userId,    	
    	luec.vin_no as vinNo,    	
    	luec.number as number,
    	luec.type as type,
    	luec.experience_id as experienceId,    	
    	luec.creater as creater,    	
    	luec.create_time as createTime,    	
    	luec.modifier as modifier,    	
    	luec.modify_time as modifyTime,    	
    	luec.version as version,    	
    	luec.remarks as remarks    	
    </sql>

    
    <sql id="joinOthers">
    </sql>
    
    <sql id="searchWhere">	
		<!-- 根据需要自行设置，同时同步InputDTO中的参数-->
		<if test="accessSystemId != null and accessSystemId != ''">
			and luec.access_system_id = #{accessSystemId}
		</if>
		<if test="appId != null and appId != ''">
			and luec.app_id = #{appId}
		</if>
		<if test="userName != null and userName != ''">
			AND CONCAT(
			IFNULL(realname, '')
			) LIKE CONCAT('%%', #{userName}, '%%')
		</if>
		<if test="userId != null and userId != ''">
			and luec.user_id = #{userId}
		</if>
		<if test="vinNo != null and vinNo != ''">
			and luec.vin_no = #{vinNo}
		</if>
		<if test="type != null and type != ''">
			and luec.type = #{type}
		</if>
    </sql>
    
    <sql id="searchOrder">
    	<if test="order != null and order != '' and desc != null and desc != ''">
			order by luec.${order} ${desc}
		</if>
    </sql>
	
	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
		insert into liebao_user_experience_count(
			id,
			access_system_id,
			app_id,
	    	user_id,	    	
	    	vin_no,
	    	type,
	    	experience_id,	    	
	    	number,	    	
	    	creater,	    	
	    	create_time,	    	
	    	modifier,	    	
	    	modify_time,	    	
	    	version,	    	
	    	remarks	    	
		) values(
			#{id},
			#{accessSystemId},
			#{appId},
			#{userId},			 
			#{vinNo},
			#{type},
			#{experienceId},			 
			#{number},			 
			#{creater},			 
			#{createTime},			 
			#{modifier},			 
			#{modifyTime},			 
			#{version},			 
			#{remarks}			 
		)
	</insert>
	
	<select id="findByUserId" resultType="UserExperienceCount">
		select
			<include refid="allColumns"/>
		from
			liebao_user_experience_count luec
		where
			luec.user_id = #{userId}
	</select>
		
	<select id="findById" resultType="UserExperienceCount">
		select
			luec.id as id,
			luec.access_system_id as accessSystemId,
			luec.name as systemName,
			luec.app_id as appId,
			luec.user_id as userId,
			luec.realname as userName,
			luec.vin_no as vinNo,
			luec.integral as integral,
			sum(luec.number) as number,
			luec.modify_time as modifyTime,
			luec.remarks as remarks
		from
			liebao_user_experience_count_view luec
			<include refid="joinOthers"/>
		where
			luec.id = #{id}
	</select>
	
	<select id="findOneByObject" resultType="UserExperienceCount">
		select
			<include refid="allColumns"/>
		from
			liebao_user_experience_count luec
		<where>
			<include refid="searchWhere"/>
		</where>
	</select>
	
	<select id="queryNumByUserId" resultType="Integer">
		select sum(number) from liebao_user_experience_count 
			group by user_id
			having
			user_id = #{userId}
	</select>
	
	<select id="countByObject" resultType="Long">
		select
			count(luec.id)
		from
			liebao_user_experience_count_view luec
			<include refid="joinOthers"/>
		<where>
			<include refid="searchWhere"/>
		</where>
	</select>
	
	<select id="findByObject" resultType="UserExperienceCount">
		select
			luec.id as id,
			luec.access_system_id as accessSystemId,
			luec.name as systemName,
			luec.app_id as appId,
			luec.user_id as userId,
			luec.realname as userName,
			luec.vin_no as vinNo,
			luec.integral as integral,
			sum(luec.number) as number,
			luec.modify_time as modifyTime,
			luec.remarks as remarks
		from
			liebao_user_experience_count_view luec
			<include refid="joinOthers"/>
		<where>
			<include refid="searchWhere"/>
		</where>
			GROUP BY 
				luec.user_id
			order by
				luec.modify_time DESC
  		<if test="limitStart != null and limitSize != null">
         	LIMIT #{limitStart},#{limitSize}
 		</if>
	</select>
	
	<update id="update">
		update liebao_user_experience_count set
			access_system_id=#{accessSystemId},
			app_id=#{appId},
			user_id=#{userId},			
			vin_no=#{vinNo},
			type=#{type},
			experience_id=#{experienceId},			
			number=#{number},			
			creater=#{creater},			
			modifier=#{modifier},
			modify_time=#{modifyTime},			
			version=#{version},			
			remarks=#{remarks}			
		where
			id = #{id}
	</update>
	
	<!-- 物理删除 
	<delete id="deleteById">
		delete from liebao_user_experience_count where id = #{id}
	</delete>
	
	<delete id="deleteByIds">
		delete from liebao_user_experience_count where id in 
		<foreach collection="ids" open="(" close=")" separator="," item="id">
			#{id}
		</foreach>
	</delete>
	-->
	
	<!-- 逻辑删除 -->
	<update id="deleteById">
		update liebao_user_experience_count set is_delete = 1 where id = #{id}
	</update>
	
	<update id="deleteByIds">
		update liebao_user_experience_count set is_delete = 1 where id in 
		<foreach collection="ids" open="(" close=")" separator="," item="id">
			#{id}
		</foreach>
	</update>
</mapper>