@charset "UTF-8";
.page-title{
	margin:10px;
	height:30px;
	line-height:30px;
}

.page-title>b{
	float:left;
	width:5px;
	height:10px;
	background-color:#264dbe;
	border-radius:6px;
	margin:10px;
}

.page-title>span{
	color:#264dbe;
	font-size:14px;
}

.pay-choose{
	display:inline-block;
	margin:20px 36px;
}

.pay-content{
	float:left;
	margin-right:20px;
}

.pay-content>label{
	float:left;
	width:108px;
	height:38px;
	background-image:url(/resources/images/payment-icon.png);
	background-repeat:no-repeat;
	border:1px solid #ccc;
	cursor:pointer;
}

.pay-content.active>label{
	border:1px solid #264dbe;
}

.pay-content:nth-of-type(1)>label{
	background-position:0 0;
}

.pay-content:nth-of-type(2)>label{
	background-position:0 -144px;
}

.pay-content:nth-of-type(3)>label{
	background-position:0 -96px;
}

.pay-content>input{
	display:none;
}

.pay-money{
	margin:10px 36px;
}

.pay-money>b{
	font-size:20px;
	color:red;
	font-weight:normal;
}

.pay-button{
	margin:10px 36px;
	width:140px;
	height:36px;
	background-color:#264dbe;
	color:#fff;
	font-size:14px;
	cursor:pointer;
}

.weixin_page{
	width:500px;
	margin:0 auto;
	text-align:center;	
	margin-top:40px;
}

.weixin_page_code img{
	display:block;
	margin:10px auto;
	height:200px;
}

.weixin_page_title{
	font-weight:normal;
	font-size:18px;
	color:#000;
}

.weixin_page_money{
	width:320px;
	border-collapse: collapse;
	margin:20px auto;
}

.weixin_page_money tr td{
	border: 1px solid #d4d4d4;
	line-height:30px;
	padding:5px 10px;
	margin:20px;
}

.weixin_page_money tr td:nth-child(2){
	color:#264dbe;;
}

.page_money{
	margin: 0 20px 10px;
    box-sizing: border-box;
    line-height: 30px;
    border-bottom: 3px solid #264dbe;;
}

.page_money>span:nth-child(1){
	float:left;
	font-size:16px;
	font-weight:bold;
	margin-right:15px;
}

