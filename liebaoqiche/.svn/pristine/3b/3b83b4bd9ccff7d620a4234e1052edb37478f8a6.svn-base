@charset "UTF-8";
/* 首页样式 */
body{
	background:#f7f7fa!important;
}

.panel-body{
	background:#f7f7fa!important;
}

.home_statistics{
	margin:10px;
	padding:30px 0 0;
	display: -webkit-flex; /* Safari */
  	display: flex;
  	justify-content:space-between;
  	align-items:center;
}

.statistics_con{
	width:24%;
	height:140px;
	position:relative;
}

.statistics_con_left{
	width:100px;
	height:100px;
	background-repeat:no-repeat;
	background-position:bottom;
	background-size:contain;
	position:absolute;
	right:20px;
	top:-20px;
	border-radius:8px;
}

.statistics_con:nth-child(1)>.statistics_con_left{
	background-color:#7391e9;
}
.statistics_con:nth-child(2)>.statistics_con_left{
	background-color:#6fb573;
}
.statistics_con:nth-child(3)>.statistics_con_left{
	background-color:#5fa6e2;
}
.statistics_con:nth-child(4)>.statistics_con_left{
	background-color:#999;
}

.statistics_con_left>img{
	height:50px;
	position:absolute;
	top:0;
	left:0;
	right:0;
	bottom:0;
	margin:auto;
}

.statistics_con_right{
	float:right;
	width:100%;
	height:140px;
	border-radius:4px;
	background-color:#fff;
	border:1px solid #ccc;
}

.statistics_con_right>p{
	line-height:30px;
	padding-left:20px;
}

.sta_right_mes{
	margin-top:48px;
	color:#999;
}

.sta_right_num{
	font-size:24px;
	margin-top:15px;
	color:#333;
}

.sta_right_num>b{
	font-weight:normal;
	font-size:12px;
	margin-left:5px;
	color:#999;
}

.home_highcharts{
	width:100%;
	display: -webkit-flex; /* Safari */
 	display: flex;
 	flex-wrap: wrap;
 	justify-content:space-between;
	padding:10px;
	box-sizing:border-box;
}

.home_highcharts>div{
 	width:49.5%;
 	height:300px;
 	border:1px solid #ccc;
 	border-radius:4px;
 	margin-bottom:10px;
 	box-sizing:border-box;
}
