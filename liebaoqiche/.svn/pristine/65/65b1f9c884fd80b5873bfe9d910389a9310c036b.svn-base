<%@ page contentType="text/html;charset=UTF-8"%>
<%@ include file="/WEB-INF/views/include/taglib.jsp"%>
<!DOCTYPE>
<html>
<head>
	<title>ActivityPointPermissionAssignment</title>
	<%@ include file="/WEB-INF/views/include/head.jsp"%>
</head>
<body>
	<%@ include file="/WEB-INF/views/include/loading.jsp"%>
	<div class="easyui-layout" data-options="fit:true">
		<div data-options="region:'center'">
	    	<form id="DataForm" method="post">
	    		<table style="width: 100%;">
	    			<tbody>
	    				<tr>
	    					<td colspan="2" class="chapter">
	    						ActivityPointPermissionAssignment基本信息
	    					</td>
	    				</tr>
	    				<tr>
	    					<td style="width: 50%; padding: 5px; text-align: center;">
	    						<input class="easyui-textbox" id="id" name="id" value="${activityPointPermissionAssignment.id}" labelWidth="100" label="id" required="true" data-options="prompt:'id'" style="width: 90%;">
	    					</td>
	    					<td style="width: 50%; padding: 5px; text-align: center;">
	    						<input class="easyui-textbox" id="activityPointRelevanceId" name="activityPointRelevanceId" value="${activityPointPermissionAssignment.activityPointRelevanceId}" labelWidth="100" label="活动积分关联编号"  data-options="prompt:'活动积分关联编号'" style="width: 90%;">
	    					</td>
	    				</tr>
	    				<tr>
	    					<td style="width: 50%; padding: 5px; text-align: center;">
	    						<input class="easyui-textbox" id="activityId" name="activityId" value="${activityPointPermissionAssignment.activityId}" labelWidth="100" label="活动编号"  data-options="prompt:'活动编号'" style="width: 90%;">
	    					</td>
	    					<td style="width: 50%; padding: 5px; text-align: center;">
	    						<input class="easyui-textbox" id="activityName" name="activityName" value="${activityPointPermissionAssignment.activityName}" labelWidth="100" label="活动内容"  data-options="prompt:'活动内容'" style="width: 90%;">
	    					</td>
	    				</tr>
	    				<tr>
	    					<td style="width: 50%; padding: 5px; text-align: center;">
	    						<input class="easyui-textbox" id="pointTypeId" name="pointTypeId" value="${activityPointPermissionAssignment.pointTypeId}" labelWidth="100" label="积分类别编号"  data-options="prompt:'积分类别编号'" style="width: 90%;">
	    					</td>
	    					<td style="width: 50%; padding: 5px; text-align: center;">
	    						<input class="easyui-textbox" id="pointTypeName" name="pointTypeName" value="${activityPointPermissionAssignment.pointTypeName}" labelWidth="100" label="积分类别名称"  data-options="prompt:'积分类别名称'" style="width: 90%;">
	    					</td>
	    				</tr>
	    				<tr>
	    					<td style="width: 50%; padding: 5px; text-align: center;">
	    						<input class="easyui-textbox" id="pointRuleId" name="pointRuleId" value="${activityPointPermissionAssignment.pointRuleId}" labelWidth="100" label="积分规则编号"  data-options="prompt:'积分规则编号'" style="width: 90%;">
	    					</td>
	    					<td style="width: 50%; padding: 5px; text-align: center;">
	    						<input class="easyui-textbox" id="pointRuleName" name="pointRuleName" value="${activityPointPermissionAssignment.pointRuleName}" labelWidth="100" label="积分规则名称"  data-options="prompt:'积分规则名称'" style="width: 90%;">
	    					</td>
	    				</tr>
	    				<tr>
	    					<td style="width: 50%; padding: 5px; text-align: center;">
	    						<input class="easyui-datebox" id="activityStartTime" name="activityStartTime" value="${activityPointPermissionAssignment.activityStartTime}" labelWidth="100" label="活动开始时间"  data-options="prompt:'活动开始时间'" style="width: 90%;">
	    					</td>
	    					<td style="width: 50%; padding: 5px; text-align: center;">
	    						<input class="easyui-datebox" id="activityEndTime" name="activityEndTime" value="${activityPointPermissionAssignment.activityEndTime}" labelWidth="100" label="活动截止时间"  data-options="prompt:'活动截止时间'" style="width: 90%;">
	    					</td>
	    				</tr>
	    				<tr>
	    					<td style="width: 50%; padding: 5px; text-align: center;">
	    						<input class="easyui-textbox" id="systemSign" name="systemSign" value="${activityPointPermissionAssignment.systemSign}" labelWidth="100" label="系统标识"  data-options="prompt:'系统标识'" style="width: 90%;">
	    					</td>
	    					<td style="width: 50%; padding: 5px; text-align: center;">
	    						<input class="easyui-textbox" id="systemSignName" name="systemSignName" value="${activityPointPermissionAssignment.systemSignName}" labelWidth="100" label="系统名称"  data-options="prompt:'系统名称'" style="width: 90%;">
	    					</td>
	    				</tr>
	    				<tr>
	    					<td style="width: 50%; padding: 5px; text-align: center;">
	    						<input class="easyui-textbox" id="creater" name="creater" value="${activityPointPermissionAssignment.creater}" labelWidth="100" label="创建人"  data-options="prompt:'创建人'" style="width: 90%;">
	    					</td>
	    					<td style="width: 50%; padding: 5px; text-align: center;">
	    						<input class="easyui-datebox" id="createTime" name="createTime" value="${activityPointPermissionAssignment.createTime}" labelWidth="100" label="创建时间"  data-options="prompt:'创建时间'" style="width: 90%;">
	    					</td>
	    				</tr>
	    				<tr>
	    					<td style="width: 50%; padding: 5px; text-align: center;">
	    						<input class="easyui-textbox" id="modifier" name="modifier" value="${activityPointPermissionAssignment.modifier}" labelWidth="100" label="修改人"  data-options="prompt:'修改人'" style="width: 90%;">
	    					</td>
	    					<td style="width: 50%; padding: 5px; text-align: center;">
	    						<input class="easyui-datebox" id="modifyTime" name="modifyTime" value="${activityPointPermissionAssignment.modifyTime}" labelWidth="100" label="修改时间"  data-options="prompt:'修改时间'" style="width: 90%;">
	    					</td>
	    				</tr>
	    				<tr>
	    					<td style="width: 50%; padding: 5px; text-align: center;">
	    						<input class="easyui-textbox" id="version" name="version" value="${activityPointPermissionAssignment.version}" labelWidth="100" label="版本"  data-options="prompt:'版本'" style="width: 90%;">
	    					</td>
	    					<td style="width: 50%; padding: 5px; text-align: center;">
	    						<input class="easyui-textbox" id="remark" name="remark" value="${activityPointPermissionAssignment.remark}" labelWidth="100" label="备注"  data-options="prompt:'备注'" style="width: 90%;">
	    					</td>
	    				</tr>
	    				<tr>
	    					<td style="width: 50%; padding: 5px; text-align: center;" colspan="2">
	    													<textarea class="easyui-textbox" name="remarks"
									style="width: 95%; height: 80px;" labelWidth="70" label="备注"
									data-options="validType:'length[1,300]',prompt:'备注'">${activityPointPermissionAssignment.remarks}</textarea>
	    					</td>
	    				</tr>
	    			</tbody>
	    		</table>
			</form>
		</div>
		<div data-options="region:'south',border:false" style="text-align:left; padding:5px;">
            <a id="btnSave" href="javascript:void(0)" class="easyui-linkbutton button-success" style="width: 80px;"><i class="fa fa-check fa-lg"></i>&nbsp;&nbsp;保存</a>
            <a id="btnCancel" href="javascript:void(0)" class="easyui-linkbutton button-warning" style="width: 80px;"><i class="fa fa-remove fa-lg"></i>&nbsp;&nbsp;取消</a>
        </div>
   	</div>
    
    <!-- js脚本，必须写在body中，tab的url加载模式只会异步加载body中的内容到tab中 -->
	<script type="text/javascript">
		require(['jquery','common'], function($){
			// 给保存按钮添加点击事件
			$("#btnSave").on('click', function(){
				
				$("#btnSave").linkbutton('disable');
			
				$("#DataForm").form('submit',{
					url:$("#id").val() == ''?'${ctx}/accesssystem/activityPointPermissionAssignment/create':'${ctx}/accesssystem/activityPointPermissionAssignment/update',
					onSubmit:function(){
						return $(this).form('enableValidation').form('validate');
					},
					success: function(data){
						var json = $.parseJSON(data);
						if(json && json.rtnCode == '00000000'){
							$.messager.alert('提示', "保存成功", "success");
							$("#btnSave").linkbutton('enable');
						}else{
							$.messager.alert('提示', json.rtnMsg, "error");
							$("#btnSave").linkbutton('enable');
						}
					},
					error: function(){
						$("#btnSave").linkbutton('enable');
					}
				});
			});
			
			// 给保存按钮添加点击事件
			$("#btnSave").on('click', function() {
				history.go(-1);
			});

			$("#btnCancel").on('click', function(){
				history.go(-1);
			});
		});
	</script>
</body>
</html>